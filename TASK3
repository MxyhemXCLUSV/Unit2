public class Mileage {
             public static void main(String[] args){
//                   THIS PROGRAM CALCULATES MILES DRIVEN PER GALLON                               {
        Scanner keyboard = new Scanner (System.in);
        
        System.out.print ("How many miles have you driven?");
        Double miles = keyboard.nextDouble ();
        System.out.print (  miles + "Miles driven" + "\n"); 
             
        System.out.print ("How many gallons have you used in total?");
        Double gallons = keyboard.nextDouble();
            Double milespergallon = (gallons / miles);
            System.out.print ("YOU DROVE" + "  " + milespergallon + "mpg" );
            
        
// add your declaration and code here
}
}
